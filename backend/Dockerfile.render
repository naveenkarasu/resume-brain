FROM python:3.12-slim

WORKDIR /app

# Lightweight build for Render free tier (512MB RAM limit)
# No PyTorch/SBERT/transformers â€” uses TF-IDF + Gemini only
COPY requirements-render.txt .
RUN pip install --no-cache-dir -r requirements-render.txt

COPY . .

ENV DISABLE_SBERT=1

EXPOSE 8000

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]

{
  "$schema": "https://raw.githubusercontent.com/nicedoc/tauridocs/main/src/schemas/config.schema.json",
  "productName": "Resume Brain",
  "version": "2.0.0",
  "identifier": "com.resume-brain.app",
  "build": {
    "beforeDevCommand": "cd ../../frontend && npm run dev -- --port 5173",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ../../frontend && npm run build",
    "frontendDist": "../../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Resume Brain",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://127.0.0.1:8000 http://localhost:8000; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "externalBin": [
      "binaries/resume-brain"
    ],
    "resources": {
      "binaries/_internal": "./_internal"
    }
  },
  "plugins": {}
}
